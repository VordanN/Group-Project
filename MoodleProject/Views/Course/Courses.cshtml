@model List<MoodleProject.Models.Courses>

<div class="row-11 d-flex justify-content-center align-items-center" style="width:400px;">
    <h1>My Courses</h1>

    @if (Model.Count == 0)
    {
        <p>You are not linked to any courses as a teacher.</p>
    }
    else
    {
        <ul>
            @foreach (var course in Model)
            {
                <li><a class="card display-5" asp-route-id="@course.Id" asp-action="Index" asp-controller="Course">@course.Name</a></li>
            }
        </ul>
    }
</div>



<div class="container d-flex justify-content-center align-items-center" style="height: 500px;">
    <form method="post" class="input-group-vertical" style="width: 16rem;">
        <h1 class="text-center mb-3">Please sign in</h1>
        <div class="mb-3">
            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
                <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
        </div>
        

        <button class="w-100 btn btn-primary" type="submit">Sign in</button>
    </form>
</div>
